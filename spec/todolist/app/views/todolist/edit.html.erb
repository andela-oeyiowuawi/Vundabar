<div class="col-md-12">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title text-center"><span class="glyphicon glyphicon-open-file" aria-hidden="true"></span> Update Task</h3>
        </div>
        <div class="panel-body">
          <form action="/todolist/<%= @todo.id%>" method="post">
            <input type="hidden" class="form-control" name="_method" value ="put" />
            <div class="form-group">
              <label for="tasktitle">Task title</label>
              <input type="text" class="form-control" name="title" value= "<%= @todo.title %>" >
            </div>
            <div class="form-group">
              <label for="tasktitle">Task status</label>
              <p><select class="form-control" name="status">
                <% if @todo.status == "pending" %>

                <option value="done">Done</option>
                <option value="pending" selected>Pending</option>
                <% else %>
                <option value="done" selected>Done</option>
                <option value="pending">Pending</option>
                <% end %>
              </select></p>
            </div>
            <div class="form-group">
              <label for="taskDescription">Task body</label>
              <textarea class="form-control" rows="7" name="body" value= ""> <%= @todo.body %></textarea>
            </div>
            <div class="form-group text-center">
            <button type="submit" class="btn btn-info" id="update_task">Update task</button>
          </div>
          </form>
        </div>
      </div>
    </div>
  </div>
