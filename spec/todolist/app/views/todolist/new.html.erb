<div class="col-md-12">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title text-center"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> New Task</h3>
        </div>
        <div class="panel-body">
          <form action="/todolist/create" method="post">
            <div class="form-group">
              <label for="tasktitle">Task title</label>
              <input type="text" class="form-control " name="title" placeholder="Title">
            </div>
            <div class="form-group">
              <label for="tasktitle">Task status</label>
              <p><select class="form-control " name="status">
                <option value="done">Done</option>
                <option value="pending">Pending</option>
              </select></p>
            </div>
            <div class="form-group">
              <label for="taskDescription">Task body</label>
              <textarea class="form-control" rows="7" name="body" placeholder="Enter task body"></textarea>
            </div>
            <div class="form-group text-center">
            <button type="submit" class="btn btn-default">Create New Task</button>
          </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
